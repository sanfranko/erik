@model List<WebApplication1.Models.CartItemViewModel>

@{
    ViewData["Title"] = "Корзина";
}

<h1>Корзина</h1>
<hr />

@if (!Model.Any())
{
    <p class="text-muted">Корзина пуста</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Товар</th>
                <th>Цена</th>
                <th>Количество</th>
                <th>Сумма</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.Quantity</td>
                    <td>@(item.Price * item.Quantity)</td>
                </tr>
            }
        </tbody>
    </table>
}
