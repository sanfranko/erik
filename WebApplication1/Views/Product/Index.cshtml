<h1>Каталог смартфонов</h1>
<hr />

@* Контейнер для карточек продуктов *@
<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-md-3 mb-4">
            <div class="card h-100 shadow">
                
                @* Картинка продукта *@
                <img src="/productImages/@(product.ImageUrl ?? "")" 
                     class="card-img-top" 
                     alt="@product.Name" 
                     style="height: 250px; object-fit: contain; padding: 15px;">

                <div class="card-body d-flex flex-column">
                    
                    @* Название и цена *@
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text text-secondary mb-1">@product.Brand.Name | @product.Category.Name</p>
                    <p class="card-text text-danger font-weight-bold mt-auto" style="font-size: 1.25em;">
                        @product.Price.ToString("C", new CultureInfo("ru-KG"))
                    </p>
                    
                    @* Кнопка "В корзину" *@
                    <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@product.Id" class="btn btn-primary btn-block">В корзину!</a>
                    @* Здесь будет кнопка "В корзину" *@
                    @* <a asp-action="AddToCart" asp-route-id="@product.Id" class="btn btn-success btn-block mt-2">В корзину</a> *@
                </div>
            </div>
        </div>
    }
</div>